<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AboutMeAppSimple.Pages.ContactPage"
             BackgroundColor="White"
             Title="Contact Me">
    <ContentPage.Content>
        <StackLayout Padding="40"
                     Spacing="10">
            <Label Text="Contact Me"
                   TextColor="Black"
                   FontSize="40"
                   VerticalOptions="Start" 
                   HorizontalOptions="CenterAndExpand" />

            <Label Text="Send me a message and tell me about yourself!"
                   TextColor="Black"
                   FontSize="14"
                   VerticalOptions="Start"  />

            <Entry Placeholder="Your Name"
                   x:Name="NameEntry"/>
            
            <Entry Placeholder="Your Email"
                   x:Name="EmailEntry"/>
            
            <StackLayout HeightRequest="10"/>

            <Label Text="Your message"
                   FontSize="18"
                   TextColor="DarkGray"/>

            <Editor HeightRequest="100"
                    x:Name="MessageEntry"/>

            <Button Text="Submit"
                    BackgroundColor="Magenta"
                    TextColor="White"
                    Clicked="Submit_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>